{
  "manifest_version": 3,
  "name": "xlFlorInterceptor",
  "version": "1.0",
  "version_name": "Test",
  "description": "XLFlor functionality extension",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "https://shop.xlflor.com/*",
    "https://script.google.com/*",
    "https://api.xlflor.com/*"
  ],

  "action": {
    "default_icon": {
      "16": "icon16.png"
    }
  },

  "options_page": "options.html"
}
